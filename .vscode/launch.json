    "version": "0.2.0",
    "configurations": [
        {
            "name": "Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
        },
        {
            "name": "Training",
            "type": "python",
            "request": "launch",
            "program": "training.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--model=PolynomialNN",
                "--data_gen=Currin",
                "--epochs=30"
            ]
        },
        {
            "name": "Models & Data",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": { "PYTHONPATH": "${workspaceRoot}"}
        }
    ]
}